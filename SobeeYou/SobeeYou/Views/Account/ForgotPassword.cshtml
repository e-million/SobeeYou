@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <h1>Forgot Password</h1>
    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
    {
        <div class="success-message">@ViewBag.SuccessMessage</div>
    }
    else
    {
        <p>Please enter your email address to reset your password.</p>
        if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <div class="error-message">@ViewBag.ErrorMessage</div>
        }
        <form action="@Url.Action("ForgotPassword", "Account")" method="post">
            <div class="form-group">
                <label for="email">Email address*</label>
                <input type="email" id="email" name="email" required>
            </div>
            <button type="submit" class="login-button">Reset Password</button>
            <div class="login-footer">
                <a href="@Url.Action("Index", "Account")">Back to Login</a>
            </div>
        </form>
    }
</div>